{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": [
        "es2017",
        "es2015",
        "es2015.promise"
      ],
      "strict": true,
      "allowJs": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "moduleResolution": "node",
      "importHelpers": true,
      "removeComments": true,
      "strictPropertyInitialization": false,
      "baseUrl": ".",
      "types": [
        "node"
      ],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "./src/**/*.ts",
      "./typings/**/*.ts",
      "./index.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
